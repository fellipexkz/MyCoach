<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_background">

    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempo de Descanso"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do ExercÃ­cio"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/restTimeWheelPicker"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:wheel_visible_item_count="5"
        app:wheel_atmospheric="true"
        app:wheel_item_text_size="18sp"
        app:wheel_item_text_color="@android:color/darker_gray"
        app:wheel_selected_item_text_color="@android:color/black"
        app:wheel_indicator="true"
        app:wheel_indicator_color="@android:color/black"
        app:wheel_curtain="false"
        app:wheel_curtain_color="@color/outline"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Confirmar"
        android:textColor="@color/on_primary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:backgroundTint="?attr/colorPrimary" />

</LinearLayout>